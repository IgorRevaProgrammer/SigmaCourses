@model List<StudentVM>
@{
    ViewData["Title"] = "Students";
}
<h3 class="text-center">@ViewData["Title"]</h3>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" asp-controller="Student" class="btn navColor text-dark"><strong>Create student</strong></a>
    </p>
}
@if(Model.Any())
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Birth date</th>
                <th scope="col">Phone number</th>
                <th scope="col">Email</th>
                <th scope="col">GitHub Link</th>
                <th scope="col">Notes</th>
                <th scope="col">Admin panel</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                 <tr>
                      <th scope="row">@(i+1)</th>
                      <td>@Model[i].Name</td>
                      <td>@Model[i].BirthDate</td>
                      <td>@Model[i].PhoneNumber</td>
                      <td>@Model[i].Email</td>
                      <td>@Model[i].GitHubLink</td>
                      <td>@Model[i].Notes</td>
                      <td>
                          @Html.ActionLink("Edit", "Edit", new { id = Model[i].Id }) |
                          @Html.ActionLink("Delete", "Delete", new { id = Model[i].Id })
                      </td>
                </tr>
            }   
      </tbody>
    </table>
}
else
{
    <h2 class="text-center">No students yet</h2>
}
