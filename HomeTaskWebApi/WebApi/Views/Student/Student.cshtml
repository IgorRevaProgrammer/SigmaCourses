@model StudentVM
@{
    ViewData["Title"] = ViewData["Action"] + " student";
}
<h3 class="text-center">@ViewData["Title"]</h3>
<form asp-action="@ViewData["Action"]" asp-controller="Student">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     <input type="hidden" asp-for="Id" />
     <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
     </div>
     <div class="form-group">
        <label asp-for="BirthDate" class="form-label"></label>
        <input type="date" asp-for="BirthDate" class="form-control" required/>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
     </div>
     <div class="form-group">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" required/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
     </div>
     <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input type="text" asp-for="Email" class="form-control" required/>
        <span asp-validation-for="Email" class="text-danger"></span>
     </div>
      <div class="form-group">
        <label asp-for="GitHubLink" class="form-label"></label>
        <input type="text" asp-for="GitHubLink" class="form-control" required/>
        <span asp-validation-for="GitHubLink" class="text-danger"></span>
     </div>
      <div class="form-group">
        <label asp-for="Notes" class="form-label"></label>
        <input type="text" asp-for="Notes" class="form-control" required/>
        <span asp-validation-for="Notes" class="text-danger"></span>
     </div>
     <input type="submit" value="Save" class="btn navColor"/>
</form>
